}

/* Header */

.header-wrapper {
	.site-header {
		position: absolute;
		width: 100%;
		background: transparent;
		border-bottom: 2px solid var(--light);
		padding: 0;

		.site-header__logo {
			img {
				/*filter: invert(1);*/
			}
		}

		.logo-wrapper {
			h1 {
				transform: translateX(-21px);
			}
		}

		.top-navbar-wrapper {
			display: grid;
			grid-template-columns: 1fr 196px 1fr;
			align-items: center;

			nav {
				.site-nav {
					width: 100%;
					display: flex;
					align-items: center;
				}
			}
		}

		.site-nav__item {
			margin-right: 10px;
		}

		.site-nav__link {
			color: var(--light);
			padding: 8px;
			letter-spacing: 0;
			font-size: 16px;
			font-family:Roboto,sans-serif;
			text-transform: inherit;
			font-weight: 400;

			/*
			span {
				background: var(--light);
			}

			&:hover {
				span {
					background: var(--light);
				}
			}
			*/
		}

		.right-main-nav {
			display: flex;
			justify-content: flex-end;
			align-items: center;


			.site-nav__link {
				padding: 0;
			}

			.site-nav__item {
				margin: 0;
			}

			.site-header__icon {
				position: relative;
				width: 22px;
				margin-left: 20px;

				.icon__fallback-text {
					display: none;
				}

				svg {
					margin-top: 5px;
					path {
						fill: var(--light);
					}
					&:hover {
						path {
							fill: var(--light);
						}
					}
				}

				.site-header__cart-count {
					position: absolute;
					background: var(--primary);
					color: var(--light);
					border-radius: 10px;
					width: 17px;
					height: 17px;
					display: flex;
					align-items: center;
					justify-content: center;
					font-size: 10px;
					font-weight: bold;
					top: 0;
    				right: -10px;
				}

				&:hover {
					svg {
						path {
							fill: var(--light);
						}
					}
				}
			}
		}
	}

	@media (max-width: 768px) {
		.site-header {
			.grid--table {
				height: auto;
			}

			.site-nav__link--burger {
				top: 0;

				.burger-icon {
					background: var(--dark);
					width: 42px;
					height: 1px;
					left: 0;
					margin: 0;				
				}
			}

			.logo-wrapper {
				padding: 0;

				h1 {
					transform: translateX(-7px);
				}
			}

			.right-main-nav {
				.site-header__icon {
					width: 17px;
					margin-left: 10px;
				}
			}
		}
	}
}

/* Home header override */


.template-index {
	.header-wrapper {
		.site-header {
			border-bottom: 2px solid var(--light);

			.site-nav__link--burger {
				.burger-icon {
					background: var(--light);
				}
			}

			.site-nav__link {
				color: var(--light);

				&:hover {
					color: var(--primary);
				}
			}

			.site-header__logo {
				img {
					filter: inherit;
				}
			}

			.right-main-nav {
				.site-header__icon {
					svg {
						path {
							fill: var(--light);
						}
					}

					&:hover {
						svg {
							path {
								fill: var(--primary);
							}
						}
					}
				}
			}

		}
	}
}

