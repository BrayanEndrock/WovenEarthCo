// Color Theming ======================================= //

:root {
	#{"--"}primary:     {{ settings.color_main }};
	#{"--"}secondary:   {{ settings.color_second }};
	#{"--"}tertiary:    {{ settings.color_tertiary }};
	#{"--"}light:       {{ settings.color_light }};
	#{"--"}highlight:   {{ settings.color_highlight }};
	#{"--"}dark:        {{ settings.color_dark }};
	#{"--"}complementary:        {{ settings.color_complementary }};
	#{"--"}complementary2:        {{ settings.color_complementary_2 }};
}

/* General overrides */

h1, .h1, h2, .h2,
h3, .h3, h4, .h4,
h5, .h5, h6, .h6 {
	font-family: 'Abril Fatface', serif;      
	font-style: normal;
	font-weight: normal;
	letter-spacing: 0;      
}

body {
	font-family: 'Roboto', sans-serif;   
}

.mobile-nav__item--secondary {
	display: none;
}

.btn {
	font-family:Roboto,sans-serif;
	text-transform: inherit;
	letter-spacing: 0;
	font-size: 22px;
	padding: 9px 37px;

	&.btn-highlight {
		background-color: var(--highlight);
		color: var(--primary);
	}
}

/* Carousel arrows */

.slick-next, .slick-prev {
	
	display: block;
	background: #fff;
	position: absolute;
	top: 150px;
	width: 42px;
	height: 42px;
	left: 0;
	margin: 0;
	text-indent: -99999px;
	outline: none;
	z-index: 9;
	padding: 0;
	overflow: hidden;

	&::after {
		content: "←";
		position: absolute;
		top: 0;
		left: 0;
		color: var(--dark);
		width: 100%;
		height: 100%;
		font-size: 20px;
		z-index: 9;
		text-indent: 0;
		line-height: 42px;
	}
}

.slick-next {
	left: auto;
	right: 0;

	&::after {
		content: "→";
	}
}

/* Reviews badge */

.reviews-badge {
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: bold;
	font-size: 16px;

	.product-rate {
		margin-right: 5px;

		img {
			width: 17px;
			display: inline-block;
		}
	}

	.ruk_rating_snippet {
		display: flex;
		justify-content: center;
		align-items: center;
		
		.ruk-rating-snippet-count {
			font-size: 16px !important;
